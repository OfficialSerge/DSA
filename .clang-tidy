Checks: '-*,clang-diagnostic-*,clang-analyzer-*,bugprone-*,modernize-*,performance-*,readability-*'
WarningsAsErrors: true
CheckOptions:
  - key:             readability-identifier-naming.ClassCase
    value:           CamelCase  # Classes usually stay CamelCase even in snake_case codebases
  - key:             readability-identifier-naming.FunctionCase
    value:           lower_case # This effectively means snake_case
  - key:             readability-identifier-naming.VariableCase
    value:           lower_case
  - key:             readability-identifier-naming.ParameterCase
    value:           lower_case
